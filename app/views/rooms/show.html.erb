<section>
  <div class="container">
    <h3 class="title">
      部屋の詳細
    </h3>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @room, :image, fallback: "no-image.png", size:"600x600" %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @room.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>部屋の詳細</th>
                </tr>
                <tr>
                  <td><%= simple_format @room.body %></td>
                </tr>
              </table>
              <% if @room.user.id == current_user.id %>
                <%= link_to "編集", edit_room_path(@room), class: "button is-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @room.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @room.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@room.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @room.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>