<section class="section">
  <div class="container">
    <div>
      <h3>新規予約</h3>
    </div>
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @reservation do |f| %>
          <div>
            <%= f.label :チェックイン , class: "label" %>
            <%= f.date_field :start_day %>
            <%= params[:start_day] %>
          </div>

          <div>
            <%= f.label :チェックアウト, class: "label" %>
            <%= f.date_field :end_day %>
            <%= params[:end_day] %>
          </div>

          <div>
            <%= f.label :人数, class: "label", min: 0 %>
            <%= f.number_field :person %>
            <%= params[:person] %>
          </div>


          

          <%= f.submit :予約する, class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

