
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
      <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード", class: "input" %>
          </div>
          <div class="actions">
            <%= f.submit "ログイン", class: "button is-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>